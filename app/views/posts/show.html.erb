<div class="row">
	<div class="span6">
		<p>
			<b>Title:</b>
			<%= link_to @post.title %>
		</p>

		<div class="btn-group">
			<%= link_to 'Edit', edit_post_path(@post), class: 'btn' %>
			<%= link_to 'Back', posts_path, class: 'btn' %>
		</div>
	</div>
	<div class="span3">
		<%= image_tag @post.image_url if @post.image? %>
	</div>
</div>
